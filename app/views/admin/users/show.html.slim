h1 ユーザーの詳細

.nav.justify-content-end
  = link_to '一覧', admin_users_path, class: 'nav-link'

table.table.table-hover
  tbody
    tr
      th= User.human_attribute_name(:id)
      td= @user.id
    tr
      th= User.human_attribute_name(:name)
      td= @user.name
    tr
      th= User.human_attribute_name(:email)
      td= @user.email
    tr
      th= User.human_attribute_name(:locale)
      td= @user.locale
    tr
      th= User.human_attribute_name(:premium)
      td= @user.premium? ? 'あり' : 'なし'
    tr
      th= User.human_attribute_name(:admin)
      td= @user.admin? ? 'あり' : 'なし'
    tr
      th= User.human_attribute_name(:skill_names)
      td= td= @user.skill_names
    tr
      th= User.human_attribute_name(:customer)
      td= td= @user.customer
    tr
      th= User.human_attribute_name(:subscription)
      td= td= @user.subscription
    tr
      th= User.human_attribute_name(:created_at)
      td= @user.created_at
    tr
      th= User.human_attribute_name(:updated_at)
      td= @user.updated_at



= link_to 'スキル設定', skill_edit_admin_user_path(@user), class: 'btn btn-primary mr-3', data: { disable_with: "遷移中..." }
= link_to 'スキル習熟度設定', skill_proficiency_edit_admin_user_path(@user), class: 'btn btn-primary mr-3', data: { disable_with: "遷移中..." }
= link_to '編集', edit_admin_user_path, class: 'btn btn-primary mr-3'
= link_to '削除', [:admin, @user], method: :delete, data: { confirm: "ユーザー「#{@user.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger'